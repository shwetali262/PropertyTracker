@model IEnumerable<PropertyTracker.Models.ViewModels.RentalPaymentInfoVM>

@{
    ViewBag.Title = "RentalList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rent Payment Info</h2>

<p>
    @Html.ActionLink("Pay Rent", "PayRent")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PropertyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenantName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentMonth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentPaidAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BalanceAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentPaidOn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PropertyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenantName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RentStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RentMonth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RentPaidAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BalanceAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RentPaidOn)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
