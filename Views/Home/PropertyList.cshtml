@model IEnumerable<PropertyTracker.Models.Account.PropertyMaster>

@{
    ViewBag.Title = "MyProperties";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Properties</h2>

<p>
    @Html.ActionLink("Add New Property", "AddNewProperty")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PropertyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PropertyLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsOnRent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentalAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOnRent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditProperty", new { id = item.Id }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>

<script>
        $(document).ready(function () {
             @if(!string.IsNullOrEmpty(ViewBag.Message))
            {
                 <text>
            Swal.fire({
                title: "",
                text: "@ViewBag.Message",
                icon: "Info"
            });
             </text>
            }
        })
</script>